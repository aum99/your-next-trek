  const mapToken = "<%-'pk.eyJ1IjoiYXVtOTkiLCJhIjoiY2xlZmtrdzYyMDh5YzNya3N2NWo5NjhmcSJ9.ftyBeM9UH7AXSx8vHze6bg'%>";
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%> };
</script>
