<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>

<div>
  <p
    class="font-monospace fs-4 mt-2 d-flex align-items-center justify-content-center"
  >
    SCROLL TO EXPLORE
    <svg
      width="25px"
      height="25px"
      class="home__scroll-mouse"
      viewBox="0 0 247 390"
      version="1.1"
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      style="
        fill-rule: evenodd;
        margin-left: 10px;
        clip-rule: evenodd;
        stroke-linecap: round;
        stroke-linejoin: round;
        stroke-miterlimit: 1.5;
      "
    >
      <path
        class="wheel"
        d="M123.359,79.775l0,72.843"
        style="fill: none; stroke: #000; stroke-width: 20px"
      ></path>
      <path
        id="mouse"
        d="M236.717,123.359c0,-62.565 -50.794,-113.359 -113.358,-113.359c-62.565,0 -113.359,50.794 -113.359,113.359l0,143.237c0,62.565 50.794,113.359 113.359,113.359c62.564,0 113.358,-50.794 113.358,-113.359l0,-143.237Z"
        style="fill: none; stroke: #000; stroke-width: 20px"
      ></path>
    </svg>
  </p>
</div>
<div class="row px-5 d-flex justify-content-around">
  <% for(let campground of campgrounds){ %>
  <div
    class="card col-6 mb-3 p-3"
    style="border-radius: 20px; border: 2px solid; width: 600px"
  >
    <div class="row" style="height: 100%">
      <div class="col-md-4">
        <p class="text-center font-monospace">PREVIEW</p>
        <% if(campground.images.length){ %>
        <img
          src="<%= campground.images[0].url%> "
          alt=""
          class="img-fluid"
          style="border-radius: 15px"
        />
        <img
          src="<%= campground.images[1].url%> "
          alt=""
          class="img-fluid"
          style="border-radius: 15px; margin-top: 25px"
        />
        <% }else{ %>
        <img
          src="https://res.cloudinary.com/damon753y/image/upload/v1676746285/YelpCamp/ap6jabp4mwumez4amagi.jpg"
          alt=""
          class="img-fluid"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div
          class="card-body d-flex flex-column justify-content-between"
          style="height: 100%"
        >
          <div>
            <h5 class="card-title"><%= campground.title %></h5>
            <p class="card-text mb-4" style="text-align: justify">
              <%= campground.description %>
            </p>
          </div>
          <div class="d-flex flex-column justify-content-end">
            <p class="text-end mb-1">
              <small class="text-muted"> <%= campground.location %> </small>
            </p>
            <a
              href="/campgrounds/<%= campground._id %>"
              class="btn btn-outline-dark px-2 ms-auto"
              style="width: 140px"
            >
              <div class="row d-flex align-items-center">
                <div class="col-10 text-start" style="width: 100px">
                  View Fort
                </div>
                <div class="col-2" style="border-left: 1px solid">
                  <i class="fa-solid ps-1 fa-arrow-right"></i>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% } %>
</div>

